= content_for(:title, "Details for resource: #{t("resource_management.#{@service_type}")} > #{t("resource_management.#{@resource_name}")}")
.modal-body.clearfix
  %p.alert.alert-danger{style: "display:none"}
  #usage_bars
    = render partial: "details_usage_bar"

  %h2
    %small
      Details
      %span.loading-place
  #details_table
    = render partial: "details_table"

- if modal?
  .modal-footer
    %button.btn.btn-default{type:"button", data: {dismiss:"modal"}, aria: {label: "Close"}} Close

= content_for :javascripts do
  :javascript
