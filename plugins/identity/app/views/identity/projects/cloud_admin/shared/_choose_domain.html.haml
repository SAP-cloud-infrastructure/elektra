= form_tag url_for(params), method: :get, class: '' do
  .form-group.string.col-sm-12.well
    %label.string.required.col-sm-2.control-label
      %abbr{title: "required"}*
      Domain ID or Name

    .col-sm-5
      .input-wrapper
        %input.string.required.form-control#pid{name:"did", value:params[:did]}
      %p.help-block
        %i.fa.fa-info-circle
        Please provide an id or name of domain you want to change role assignments.
    .col-sm-2
      = submit_tag 'Choose Domain', class: 'btn btn-primary'

    .col-sm-3
      - if @domain
        = "Domain: #{@domain.name}"
