{
  "context_is_cloud_admin":  "role:cloud_compute_admin",
  "context_is_admin":  "rule:context_is_cloud_admin",
  "member": "role:member or role:Member",
  "viewer": "role:compute_viewer",
  "context_is_editor": "rule:context_is_admin or rule:member",
  "context_is_viewer":  "rule:context_is_editor or rule:viewer",

  "compute:all_projects": "rule:context_is_admin",
  "compute:instance_get": "rule:context_is_viewer",
  "compute:instance_list": "rule:context_is_viewer",
  "compute:instance_create": "rule:context_is_editor and (not rule:monsoon2_domain or rule:project_parent)",
  "compute:instance_update": "rule:context_is_editor and (not rule:monsoon2_domain or rule:project_parent)",
  "compute:instance_delete": "rule:context_is_editor and (not rule:monsoon2_domain or rule:project_parent)",
  "compute:keypair_list": "rule:context_is_viewer and (not rule:monsoon2_domain)",
  "compute:keypair_create": "rule:context_is_editor and (not rule:monsoon2_domain)",
  "compute:keypair_get": "rule:context_is_viewer and (not rule:monsoon2_domain)",
  "compute:keypair_update": "rule:context_is_editor and (not rule:monsoon2_domain)",
  "compute:keypair_delete": "rule:context_is_editor and (not rule:monsoon2_domain)",

  "compute:hypervisor_get": "rule:context_is_cloud_admin",
  "compute:hypervisor_list": "rule:context_is_cloud_admin",
  "compute:hypervisor_servers": "rule:context_is_cloud_admin",

  "compute:flavor_get": "rule:context_is_viewer",
  "compute:flavor_list": "rule:context_is_viewer",
  "compute:flavor_create": "rule:context_is_cloud_admin",
  "compute:flavor_delete": "rule:context_is_cloud_admin",
  "compute:flavor_update": "rule:context_is_cloud_admin",
  "compute:flavor_access_create": "rule:context_is_cloud_admin",
  "compute:flavor_access_list": "rule:context_is_cloud_admin and not %(flavor.is_public?)s",
  "compute:flavor_access_delete": "rule:context_is_cloud_admin",
  "compute:flavor_manage_metadata": "rule:context_is_cloud_admin"
}
