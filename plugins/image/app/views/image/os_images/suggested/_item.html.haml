%tr{id: "image_#{image.id}", data: {search_name: image.name+'_'+image.id, marker_id: image.id}}
  %td
    = image.name
    %br
    %span.info-text= image.id
  %td= image.disk_format
  %td= byte_to_human(image.size)
  %td
    = project_id_and_name(image.owner)
  %td.snug
    .btn-group
      %button.btn.btn-default.btn-sm.dropdown-toggle{ type: 'button', data: { toggle: 'dropdown' }, aria: { expanded: true } }
        %span.fa.fa-cog
      %ul.dropdown-menu.dropdown-menu-right{ role: 'menu' }
        %li= link_to 'Accept', plugin('image').os_images_suggested_accept_path(suggested_id: image.id), method: :put, remote: true, data: {loading_status: true}
        %li= link_to 'Reject', plugin('image').os_images_suggested_reject_path(suggested_id: image.id), method: :put, remote: true, data: {loading_status: true}
