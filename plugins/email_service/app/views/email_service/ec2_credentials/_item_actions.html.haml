.btn-group
  %button.btn.btn-default.btn-sm.dropdown-toggle{ type: "button", data: { toggle: "dropdown"}, aria: { expanded: true } }
    %span.fa.fa-cog
  %ul.dropdown-menu.dropdown-menu-right{ role:"menu" }
    %li= link_to "Show", plugin('email_service').ec2_credential_path(id: element.access), data: { modal: true }
    - if current_user.is_allowed?('email_service:ec2_credentials_delete')
      %li= link_to "Delete", plugin('email_service').ec2_credential_path(id: element.access, action_from_show: false), method: :delete, data: { modal: true }
