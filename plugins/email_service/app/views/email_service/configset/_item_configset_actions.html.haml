.btn-group
  %button.btn.btn-default.btn-sm.dropdown-toggle{ type: "button", data: { toggle: "dropdown"}, aria: { expanded: true } }
    %span.fa.fa-cog
  %ul.dropdown-menu.dropdown-menu-right{ role:"menu" }
    - if current_user
      %li= link_to('Show details', plugin('email_service').configset_show_configset_path(name: configset), data: {modal: true})
      %li= link_to 'Delete', plugin('email_service').configset_destroy_configset_url(name: configset), method: :post, data: { confirm: "Are you sure to delete the Configuration set #{configset}", ok: "Yes, delete it", confirmed: :loading_status}