.verified_domain_table
%table.table
  %thead
    %tr
      %th ID
      %th Domain
      %th Verification status
      %th DKIM enabled
      %th DKIM status
      %th.snug
  %tbody
    - if !@all_domains || @all_domains.empty?
      %tr
        %td{ colspan: 4 } No verified domain available
    - else
      -@paginatable_domains.each do | domain_item |
        = render partial: 'table_verified_domain_item', locals: { domain_item: domain_item }
-if @paginatable_domains    
  = paginate @paginatable_domains, :theme => 'twitter-bootstrap-3', :remote => false 
