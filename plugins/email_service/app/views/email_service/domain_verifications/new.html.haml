=content_for :main_toolbar do
  Email Service
  .placeholder-div
- identity_hint = "The domain name to be verified"
= simple_form_for @verified_domain, as: :verified_domain, url: plugin('email_service').domain_verifications_path, method: :post, remote: request.xhr?, html: {data: {modal: true}, class: 'form-horizontal' } do |f|
  .modal-body
    %div{class: modal? ? 'modal-body' : ''}
      = f.input :identity, required: true, icon_hint: identity_hint
      = f.input :dkim_enabled,  as: :boolean, input_html: {}, checked_value: true, unchecked_value: false, label: "Enable DKIM"
      #-= f.input :tags, as: :text, input_html: {}, label: "Tags"
      = f.input :domain_signing_selector, input_html: {}, label: "Domain Signing Selector"
      = f.input :domain_signing_private_key, as: :text, input_html: {}, label: "Domain Signing Private Key"
      = f.input :next_signing_key_length, label: "Next Signing Key Length", input_html: {}, as: :select, collection: @rsa_key_length
      = f.input :configset_name, label: "Configset Name", input_html: {}, as: :select, collection: @configsets_collection
    %div.buttons{class: modal? ? 'modal-footer' : ''}
    - if modal?
      %button.btn.btn-default{type:"button", data: {dismiss:"modal"}, aria: {label: "Cancel"}} Cancel
    - else
      = link_to "Cancel", plugin('email_service').domain_verifications_path(), class: 'btn btn-default'
    = button_tag "Verify domain", { class: 'btn btn-primary pull-right', data: { disable_with: "Please wait..." } }
