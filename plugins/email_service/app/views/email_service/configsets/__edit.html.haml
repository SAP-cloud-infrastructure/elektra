= content_for :title do
  Update Configset

- c_name = @configset.name if @configset
- path = plugin('email_service').configsets_path
= simple_form_for :configset, url: plugin('email_service').configset_path(id: params[:id], name: params[:name]), method: :patch, remote: request.xhr?, html: { data: { modal: true } } do |f|
  .modal-body
    .modal-flashes
      = render "email_service/shared/flashes.html"
    .row
      .col-sm-6
        = f.input :name, required: true, label: 'Name', input_html: { autofocus: 'autofocus', value: c_name }, placeholder: 'Enter name'
  %div{class: modal? ? 'modal-footer' : ''}
    - if modal?
      %button.btn.btn-default{type:"button", data: {dismiss:"modal"}, aria: {label: "Cancel"}} Cancel
    - else
      = link_to "Cancel", plugin('email_service').configsets_path(), class: 'btn btn-default'
    = button_tag "Update", { class: 'btn btn-primary pull-right', data: { disable_with: "Please wait..." } }
