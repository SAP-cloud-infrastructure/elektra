- is_edit_form = form_type == 'edit' ? true : false
- name_hint = form_type == 'edit' ? "enter name" : "cannot edit template name. delete and create another template if name is to be changed."
=f.input :name, required: true, label: 'Name', input_html: { autofocus: 'autofocus', readonly: is_edit_form }, placeholder: 'Enter name', hint: name_hint

=f.input :subject, required: true, label: 'Subject',  placeholder: 'Enter subject'

=f.input :html_part, required: true, label: "HTML Content", as: :text, placeholder: "Enter HTML part of your email template", input_html: {rows: "10", class: "u-text-monospace"}, hint: 'Enter html part of your template' 

=f.input :text_part, required: true, label: "Text Content", as: :text, placeholder: "Enter PLAIN text part of your email template", input_html:  {rows: "10", class: "u-text-monospace" }, hint: 'Enter plain text part of your eMail template'