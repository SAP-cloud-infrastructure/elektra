=content_for :main_toolbar do
  Email Service
= render partial: 'email_service/shared/nav.html', locals: {pane: 'templates'}

.tab-content
  .tab-pane.active{role:"tabpanel", id:"templates-pane"}

    %h3
      Templates Available

    .row

      .col-sm-9
        .toolbar
          - if current_user.is_allowed?('context_is_emailservice_editor')
            .main-buttons
              = link_to "New Template", plugin('email_service').new_template_path, data: {modal: false}, class: 'btn btn-primary'

        .js-table-container
          = render partial: 'table_templates', locals: {templates: @templates}

      .col-sm-3
        .bs-callout.bs-callout-primary.toolbar-aligment
          %p
            Converged Cloud EMails Service - AWS Simple EMail Service - Templates
            = link_to "AWS Simple EMail Service", "https://aws.amazon.com/ses/", :target => "_blank"
            \.
