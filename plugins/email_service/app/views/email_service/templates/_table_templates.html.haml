- if !@templates || @templates.empty? || @templates.length == 0
  %h2 No email templates are available. Create one, if you need.
- else 
  .templates_table
  %table.table.table-striped
    %thead
      %tr
        %th Name
        %th Subject
        %th.snug
    %tbody
      - @paginatable_templates.each do | template_item |
        = render partial: 'table_template_item', locals: { template_item: template_item }
    = paginate @paginatable_templates, :theme => 'twitter-bootstrap-3', :remote => false
