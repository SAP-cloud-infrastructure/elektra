=content_for :main_toolbar do
  Email Service

= simple_form_for :verified_email, url: plugin('email_service').verifications_path, method: :post, remote: request.xhr?, html: {data: {modal: true}, class: 'form-horizontal' } do |f|

  %div{class: modal? ? 'modal-body' : ''}
    = f.input :sender, icon_hint: "Multiple email addresses can be separated by comma (,)"

  %div.buttons{class: modal? ? 'modal-footer' : ''}
  - if modal?
    %button.btn.btn-default{type:"button", data: {dismiss:"modal"}, aria: {label: "Cancel"}} Cancel
  - else
    = link_to "Cancel", plugin('email-service').verifications_url(), class: 'btn btn-default'
  = button_tag "Verify", { class: 'btn btn-primary pull-right', data: { disable_with: "Please wait..." } }

