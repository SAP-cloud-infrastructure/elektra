= content_for :title do
  Edit Custom Verification eMail Templates
- update_url = plugin('email_service').custom_verification_email_template_path(id: params[:id],name: params[:name])
- unless modal?
  %h3 Edit Custom Verification eMail Templates

= simple_form_for @custom_template, as: :custom_template, url: update_url , method: :put, remote: request.xhr?,  html: {id: 'form_template', data: {modal: true}, class: 'form-horizontal' }, wrapper: :horizontal_form do |f|

  .modal-body.static-columns
    .modal-flashes
      = render "email_service/shared/flashes.html"

    = render partial: 'form', locals: { f: f, form_type: 'edit' }

  %div{class: modal? ? 'modal-footer' : ''}
    - if modal?
      %button.btn.btn-default{type:"button", data: {dismiss:"modal"}, aria: {label: "Cancel"}} Cancel
    - else
      = link_to "Cancel", plugin('email_service').plugin('email_service').templates_path(), class: 'btn btn-default'
    = button_tag "Update", { class: 'btn btn-primary pull-right', data: { disable_with: "Please wait..." } }
