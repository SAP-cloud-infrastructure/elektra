.infobox
  %h4.action-heading
    Listener Info
  %table.table
    %tbody
      %tr
        %th.snug-nowrap
          State:
        %td
          .state{data:{update_loadbalancer_state: plugin('loadbalancing').get_item_loadbalancer_path(id: loadbalancer.id), initial_loadbalancer_state: loadbalancer.provisioning_status}}
      %tr
        %th.snug-nowrap
          Name:
        %td
          = listener.name
      %tr
        %th.snug-nowrap
          Description:
        %td
          = listener.description
      %tr
        %th.snug-nowrap
          ID:
        %td.small
          = listener.id
      %tr
        %th.snug-nowrap
          Protocol:
        %td
          = listener.protocol
      %tr
        %th.snug-nowrap
          Port:
        %td
          = listener.protocol_port