<% if @success %>
  $(".flashes p[data='router-error']").remove();
  $("#router_<%=params[:id]%>").remove();
<% else %>
  var html = '<p class="alert alert-error" data="router-error"><%=@router.errors.full_messages.to_sentence%></p>';
  if ($(".flashes p[data='router-error']").length>0)
    $(".flashes p[data='router-error']").replaceWith(html);
  else
    $(".flashes").append(html);

  $("#router_<%=params[:id]%>").removeClass('updating');
<%end%>
