- @header_title ||= "Application"
- @title ||= "Database Error"
- @description ||= "Oops! It seems we're experiencing some technical difficulties connecting to our database at the moment. Please contact support if the problem persists."


.bs-callout.bs-callout-danger
  %h3= @title.html_safe
  %p= h(@description)
  - if @error_id
    .callout-footer
      %b Error ID:
      %span
        = @error_id


-if @sentry_event_id && $sentry_public_dsn
  = content_for :javascripts do
    :javascript
      Raven.showReportDialog({
        // grab the eventId generated by the Sentry SDK
        eventId: '#{@sentry_event_id}',
      });
