<div class="login-container">
  <h2>Login</h2>

  <%= @error%>
  <%= form_with url: "create", method: :post, local: true, class: "login-form" do |form| %>
  <div class="form-group">
    <%= form.label :user, "Username:" %> <%= form.text_field :user, required: true, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :password, "Password:" %> <%= form.password_field :password, required: true, class: "form-control" %>
  </div>

  <div class="form-group"><%= form.submit "Login", class: "btn btn-primary" %></div>
  <% end %>
</div>
