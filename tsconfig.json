{
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "Default",
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "esModuleInterop": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "noEmit": true,
    //"lib": ["DOM", "DOM.Iterable", "ES2022"] ,
    "typeRoots": ["./config/esbuild/types", "./node_modules"],
    "jsx": "react-jsx",
    "allowJs": true,
    "types": ["vitest/globals"]
  },
  "exclude": ["node_modules"],
  "include": [
    "config/esbuild/types/**/*",
    "plugins/**/app/javascript/widgets/app/**/*"
  ]
}
